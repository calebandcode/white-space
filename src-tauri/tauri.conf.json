{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "White Space",
  "version": "0.1.0",
  "identifier": "com.whitespace.app",
  "build": {
    "beforeDevCommand": "cd apps/desktop/ui && npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../apps/desktop/ui/dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "maximizable": false,
        "title": "White Space",
        "width": 1040,
        "height": 700,
        "titleBarStyle": "Overlay",
        "backgroundColor": "#f1f5f9"
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}